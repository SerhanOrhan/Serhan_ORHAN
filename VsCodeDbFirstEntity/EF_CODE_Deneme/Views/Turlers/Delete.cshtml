@model EF_CODE_Deneme.Models.Turler
@{
    ViewData["Title"] = "Delete";
}

<h1>Silme Sayfası</h1>

<div class="row">
    <div class="col-sm-4">
        Tür Id:
    </div>
    <div class="col-sm-5">
        @Model.Id
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        Tür Adı:
    </div>
    <div class="col-sm-5">
        @Model.TurAd
    </div>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Sil" class="btn btn-danger">
</form>
<a asp-action="Index" class="btn btn-primary">Türler Listesine geri dön</a>