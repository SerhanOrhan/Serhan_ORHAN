@model Yazarlar
@{
    ViewData["Title"] = "Create";
}
<h1>Yeni bir Yazar Ekleme Sayfası</h1>

<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div>
                <div>
                    <label asp-for="AdSoyad">Ad Soyad</label>
                    <input type="text" asp-for="AdSoyad" class="form-control">
                </div>
                <div>
                    <label asp-for="Cinsiyet">Cinsiyet</label>
                    <input type="text" asp-for="Cinsiyet" class="form-control">
                </div>
                <div>
                    <label asp-for="DogumTarihi">Doğum Tarihi</label>
                    <input type="date" asp-for="DogumTarihi" class="form-control">
                </div>
                <div>
                    <label asp-for="Tel">Tel</label>
                    <input type="text" asp-for="Tel" class="form-control">
                </div>
                <div>
                    <label asp-for="Mail">Mail Adresi</label>
                    <input type="text" asp-for="Mail" class="form-control">
                </div>
                <div>
                    <label>Tür</label>
                    <select asp-for="TurlerId" asp-items="ViewBag.Yazar" class="form-select form-control"></select>
                </div>
                <div>
                    <input type="submit" value="Kaydet" class="btn btn-primary">
                </div>
            </div>
                <a asp-action="Index" class="btn btn-primary">Yazarlar Sayfasına geri dön</a>
        </form>
    </div>

</div>