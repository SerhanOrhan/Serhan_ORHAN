@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Category</h1>

<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <label asp-for="CategoryId" class="form-control">Category ID : @Model.CategoryId</label>
            <input type="hidden" asp-for="CategoryId">
            <label asp-for="CategoryName" class="control-label">Category Name</label>
            <input type="text" asp-for="CategoryName" class="form-control">
            <label asp-for="CategoryDescription" class="control-label"></label>
            <input type="text" asp-for="CategoryDescription" class="form-control">
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success">
            </div>
            </form>
    </div>
</div>